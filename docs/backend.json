{
  "entities": {
    "Expense": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Expense",
      "type": "object",
      "description": "Represents an expense record.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the expense."
        },
        "date": {
          "type": "string",
          "description": "Date of the expense.",
          "format": "date-time"
        },
        "amount": {
          "type": "number",
          "description": "Amount of the expense."
        },
        "category": {
          "type": "string",
          "description": "Category of the expense (e.g., 'Rent', 'Supplies')."
        },
        "description": {
          "type": "string",
          "description": "Description of the expense."
        }
      },
      "required": ["date", "amount", "category", "description"]
    },
    "Revenue": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Revenue",
      "type": "object",
      "description": "Represents a revenue record.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the revenue."
        },
        "date": {
          "type": "string",
          "description": "Date of the revenue.",
          "format": "date-time"
        },
        "amount": {
          "type": "number",
          "description": "Amount of the revenue."
        },
        "source": {
          "type": "string",
          "description": "Source of the revenue (e.g., 'Sales', 'Services')."
        },
        "description": {
          "type": "string",
          "description": "Description of the revenue."
        }
      },
      "required": ["date", "amount", "source"]
    },
    "Appointment": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Appointment",
      "type": "object",
      "description": "Represents a scheduled appointment.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the appointment."
        },
        "startTime": {
          "type": "string",
          "description": "Start time of the appointment.",
          "format": "date-time"
        },
        "endTime": {
          "type": "string",
          "description": "End time of the appointment.",
          "format": "date-time"
        },
        "description": {
          "type": "string",
          "description": "Description of the appointment."
        },
        "notes": {
          "type": "string",
          "description": "Additional notes for the appointment, potentially AI-generated."
        }
      },
      "required": ["startTime", "endTime", "description"]
    },
    "RawMaterial": {
      "title": "Raw Material",
      "description": "Represents a single raw material or ingredient in inventory.",
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "description": "Internal code or SKU for the material."
        },
        "description": {
          "type": "string",
          "description": "Name or description of the material."
        },
        "unit": {
          "type": "string",
          "description": "The unit of measurement (e.g., KG, L, UN)."
        },
        "cost": {
          "type": "number",
          "description": "The cost per unit of the material."
        },
        "supplier": {
          "type": "string",
          "description": "The primary supplier of the material."
        },
        "quantity": {
          "type": "number",
          "description": "The current quantity in stock."
        },
        "minStock": {
          "type": "number",
          "description": "The minimum stock level before an alert is triggered."
        }
      },
      "required": [
        "code",
        "description",
        "unit",
        "cost",
        "quantity",
        "minStock"
      ]
    },
    "FinishedProduct": {
      "title": "Finished Product",
      "description": "Represents a final product ready for sale.",
      "type": "object",
      "properties": {
        "sku": {
          "type": "string",
          "description": "Stock Keeping Unit for the product."
        },
        "name": {
          "type": "string",
          "description": "Name of the product."
        },
        "category": {
          "type": "string",
          "description": "Category of the product (e.g., 'Bolo', 'Pastel')."
        },
        "unit": {
          "type": "string",
          "description": "Unit of sale (e.g., 'UN', 'KG')."
        },
        "recipe": {
          "type": "array",
          "description": "List of raw materials and quantities to produce one unit.",
          "items": {
            "type": "object",
            "properties": {
              "rawMaterialId": {
                "type": "string"
              },
              "quantity": {
                "type": "number"
              }
            },
            "required": ["rawMaterialId", "quantity"]
          }
        },
        "finalCost": {
          "type": "number",
          "description": "The final calculated or manually set cost of the product."
        },
        "salePrice": {
          "type": "number",
          "description": "The price at which the product is sold."
        },
        "flavors": {
          "type": "array",
          "description": "Different flavors or variations of the product.",
          "items": {
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "name": {"type": "string"},
              "stock": {"type": "number"}
            },
            "required": ["id", "name", "stock"]
          }
        }
      },
      "required": ["sku", "name", "category", "unit", "finalCost", "salePrice", "flavors"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}/expenses/{expenseId}",
        "definition": {
          "entityName": "Expense",
          "schema": {
            "$ref": "#/entities/Expense"
          },
          "description": "Stores expense records for a specific user. Path-based ownership ensures only the user can access their expenses."
        }
      },
      {
        "path": "/users/{userId}/revenues/{revenueId}",
        "definition": {
          "entityName": "Revenue",
          "schema": {
            "$ref": "#/entities/Revenue"
          },
          "description": "Stores revenue records for a specific user. Path-based ownership ensures only the user can access their revenue."
        }
      },
      {
        "path": "/users/{userId}/appointments/{appointmentId}",
        "definition": {
          "entityName": "Appointment",
          "schema": {
            "$ref": "#/entities/Appointment"
          },
          "description": "Stores appointment records for a specific user. Path-based ownership ensures only the user can access their appointments."
        }
      },
      {
        "path": "/users/{userId}/raw-materials/{materialId}",
        "definition": {
          "entityName": "RawMaterial",
          "schema": {
            "$ref": "#/entities/RawMaterial"
          },
          "description": "Stores raw material inventory for a specific user."
        }
      },
       {
        "path": "/users/{userId}/finished-products/{productId}",
        "definition": {
          "entityName": "FinishedProduct",
          "schema": {
            "$ref": "#/entities/FinishedProduct"
          },
          "description": "Stores finished product definitions for a specific user."
        }
      }
    ]
  }
}
