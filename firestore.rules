rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra geral de segurança: nega todas as leituras e escritas por padrão.
    match /{document=**} {
      allow read, write: if false;
    }

    // Permite que usuários autenticados acessem seus próprios dados.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /expenses/{expenseId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /revenues/{revenueId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /appointments/{appointmentId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /finished-products/{productId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /raw-materials/{materialId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /purchases/{purchaseId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /sales/{saleId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /settings/{settingId} {
      allow read, write: if isOwner(resource.data.userId);
    }
  }
}